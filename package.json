{
  "name": "flatten-somalia-backend",
  "version": "1.0.0",
  "description": "The backend server for flatten.so",
  "author": "Flatten",
  "main": "src/index.js",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "url": "https://github.com/flatten-official/backend-so.git",
    "type": "Git"
  },
  "scripts": {
    "start": "node src/launch.js",
    "dev": "nodemon src/launch.js",
    "test": "jest --runInBand --collect-coverage",
    "doc": "apidoc -i ./src -o ./docs && open-cli ./docs/index.html",
    "depcheck": "depcheck . --ignores=\"eslint*\" --ignore-dirs=\"coverage,docs\"",
    "lint": "eslint --fix .",
    "auth": "gcloud auth login && gcloud auth application-default login && gcloud config set project flatten-staging-271921"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^2.1.0",
    "@sendgrid/mail": "^7.1.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "depcheck": "^0.9.2",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.15",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "apidoc": "^0.22.1",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "mongodb-memory-server": "^6.6.1",
    "nodemon": "^2.0.3",
    "open-cli": "^6.0.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "./test/setup.js"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "nodemonConfig": {
    "env": {
      "ENVIRONMENT": "dev"
    }
  }
}
