{
  "name": "flatten-somalia",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "license": "UNLISCENSED",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch packages packages/backend/src/launch.js",
    "lint": "eslint --fix .",
    "cloud-func": "node scripts/cloudFunctionLauncher.js",
    "auth": "gcloud auth login && gcloud auth application-default login && gcloud config set project flatten-staging-271921",
    "auth-no-browser": "gcloud auth login && gcloud auth application-default login --no-launch-browser && gcloud config set project flatten-staging-271921",
    "deploy-staging": "node scripts/createBranchJson.js && gcloud config set project flatten-staging-271921 && gcloud builds submit",
    "depcheck": "depcheck  --ignores=\"eslint*\" --ignore-dirs=\"coverage,docs\"",
    "doc": "apidoc -i src -o ./docs && open-cli ./docs/index.html",
    "test": "jest",
    "deploy-backend": "gcloud config set project flatten-staging-271921 && gcloud builds submit --config=deployment/backend/cloudbuild.yaml"
  },
  "devDependencies": {
    "branch-name": "^1.0.0",
    "depcheck": "^0.9.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "nodemon": "^2.0.4",
    "open-cli": "^6.0.1",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "nodemonConfig": {
    "env": {
      "ENVIRONMENT": "dev"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "./scripts/setupTests.js"
    ],
    "setupFilesAfterEnv": [
      "./scripts/setupTestsAfterEnv.js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ]
  }
}
